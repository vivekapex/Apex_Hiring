<div class="container">
	<div class="row">
		<div class="primary col-md-12 col-sm-12 col-xs-12" style="margin-top: 20px;">
			<section class="about section" style="margin-bottom: 10px;">
			    <div class="section-inner" style="padding: 20px;">
			    	<p><a href="javascript:void(0);" onclick="goBack()">Back</a></p>
			        <h2 class="heading" style="margin-bottom: 0px; text-align: center; margin-top: -22px;">Responses&nbsp;&nbsp;</h2>
			    </div>
			</section>
		</div>
	</div>
	<div class="panel-group" id="accordion">
		<% @users.each_with_index do |user, index| %>
			<div class="panel <% if index == 0 %>panel-default<% end %>">
				<div class="panel-heading">
					<h4 class="panel-title">
						<span><a data-toggle="collapse" data-parent="#accordion" href="#collapse_<%=user.id%>"><em>Click me:&nbsp;<%= user.name %>&nbsp;&nbsp;( <%= user.email %> )</em></a></span>
						<span class="pull-right">Mobile:&nbsp;&nbsp;<em><%= user.mobile %></em></span>
					</h4>
				</div>
				<!-- <div id="collapse_<%=user.id%>" class="panel-collapse collapse in"> -->
				<div id="collapse_<%=user.id%>" class="panel-collapse collapse">
					<div class="panel-body">
						<% if user.submissions.count != 0 %>
							<% user.submissions.each_with_index do |user_subm, index| %>

								<div style="padding: 5px;">
									<div style="background:powderblue; padding:10px 25px 10px 25px;">
										<label for="question1">Question one: </label>
										<p style="margin-bottom: 5px;"><%= user_subm.question_one.gsub("[","").gsub("]","").gsub("\"","").split("@@@,")[0] %></p>
										<label for="question1">Response one: </label>
										<pre style="margin-bottom: 25px;"><p style="padding: 5px;"><%= user_subm.response_one %></p></pre>
									</div>

									<div style="background:antiquewhite; padding:10px 25px 10px 25px;">
										<label for="question2">Question two: </label>
										<p style="margin-bottom: 5px;"><%= user_subm.question_two.gsub("[","").gsub("]","").gsub("\"","").split("@@@,")[0] %></p>
										<label for="question2">Response two: </label>
										<pre style="margin-bottom: 25px;"><p style="padding: 5px;"><%= user_subm.response_two %></p></pre>
									</div>

									<div style="background:azure; padding:10px 25px 10px 25px;">
										<label for="question3">Question three: </label>
										<p style="margin-bottom: 5px;"><%= user_subm.question_three.gsub("[","").gsub("]","").gsub("\"","").split("@@@,")[0] %></p>
										<label for="question3">Response three: </label>
										<pre style="margin-bottom: 25px;"><p style="padding: 5px;"><%= user_subm.response_three.gsub("[","").gsub("]","").gsub("\"","").split("@@@,")[0] %></p></pre>
									</div>

									<div style="background:beige; padding:10px 25px 10px 25px;">
										<label for="question4">Question four: </label>
										<p style="margin-bottom: 5px;"><%= user_subm.question_four.gsub("[","").gsub("]","").gsub("\"","").split("@@@,")[0] %></p>
										<label for="question4">Response four: </label>
										<pre style="margin-bottom: 25px;"><p style="padding: 5px;"><%= user_subm.response_four %></p></pre>
									</div>
								</div>
							<% end %>
						<% else %>
							<p><b><%= user.name %></b> has not submitted any responses.</p>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div> 
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$("footer").remove();
	});
	function goBack() {
		window.history.back();
	}
</script>