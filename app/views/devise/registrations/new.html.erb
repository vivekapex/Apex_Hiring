<%= stylesheet_link_tag "form_one.css" %>
<%= stylesheet_link_tag "form_two.css" %>
<div class="container bg_set">
  <header>
    <h1 style="color: #fff; opacity: 0.8;">
       Apex Financial Technologies hiring challenge
    </h1>
  </header>
  <div class="form">
    <%= form_for(resource, as: resource_name, :html => { :id => "contactform" }, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <p class="contact"><%= f.label :name do %>Name<span class="required">&nbsp;*</span><%end%></p>
      <%= f.text_field :name, autofocus: true, placeholder: "Name *", class: "user_name", required: "" %>

      <p class="contact"><%= f.label :email do %>Email<span class="required">&nbsp;*</span><%end%></p>
      <%= f.email_field :email, autofocus: true, placeholder: "Email *", class: "user_email", required: "" %>
    
      <p class="contact"><%= f.label :password do %>Password<span class="required">&nbsp;*</span> <% if @minimum_password_length %><em>(<%= @minimum_password_length %> characters minimum)</em><% end end %></p>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password *", class: "user_password", required: "" %>

      <p class="contact"><%= f.label :password_confirmation do %>Password confirmation<span class="required">&nbsp;*</span><%end%></p>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation *", class: "user_confirm_password", required: "" %>
  
      <p class="contact"><%= f.label :mobile do %>Mobile<span class="required">&nbsp;* (Enter 10 digit number only)</span><%end%></p>
      <%= f.text_field :mobile, :min=>10, :max=>10, autofocus: true, placeholder: "Mobile *", class: "user_mobile", required: "" %>
      <br>

      <div class="actions" style="text-align: center;">
        <%= f.submit "Sign up", class: "buttom" %>
      </div>

    <% end %>
  </div>
</div>

